<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.coders.goodest.scannbuy.ScanActivity"
    tools:layout_editor_absoluteY="81dp">

    <FrameLayout
        android:id="@+id/scanFragmentContainer"
        class="com.coders.goodest.scannbuy.fragments.ScanFragment"

        android:layout_width="0dp"
        android:layout_height="480dp"

        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shopIdTextView"></FrameLayout>

    <ListView
        android:id="@+id/cartProductListView"
        android:layout_width="match_parent"
        android:listSelector="@android:color/transparent"
        android:layout_height="461dp"></ListView>

    <Button
        android:id="@+id/button_plus_cart"
        android:visibility="invisible"
        android:text="+"
        android:gravity="center"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/button_minus_cart"
        android:visibility="invisible"
        android:text="-"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/button_plus_cart"/>

    <TextView
        android:id="@+id/product_quantity_TextView_cart"
        android:visibility="invisible"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Quantity:"
        android:textSize="40px"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/button_plus_cart"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/product_quantity_cart"
        android:visibility="invisible"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="40px"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/product_quantity_TextView_cart"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/button_delete_cart"
        android:visibility="invisible"
        android:text="DELETE"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/product_quantity_cart"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/cartSummary"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="TextView"
        android:paddingLeft="250dp"
        tools:text="Summary" />

</android.support.constraint.ConstraintLayout>