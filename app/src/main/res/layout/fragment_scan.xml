<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/button_plus_cart"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button_delete_cart"
        android:layout_marginTop="69dp"
        android:background="@null"
        android:gravity="center"
        android:text="@string/plus"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="334dp"
        tools:layout_editor_absoluteY="70dp" />

    <Button
        android:id="@+id/button_minus_cart"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_plus_cart"
        android:layout_toEndOf="@+id/button_plus_cart"
        android:background="@null"
        android:text="@string/minus"
        android:textColor="@color/colorPrimary"
        android:textSize="24dp"
        tools:layout_editor_absoluteX="284dp"
        tools:layout_editor_absoluteY="70dp" />

    <TextView
        android:id="@+id/product_quantity_TextView_cart"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button_plus_cart"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="@string/quantity"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        tools:layout_editor_absoluteX="284dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/product_quantity_cart"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_plus_cart"
        android:layout_alignStart="@+id/button_plus_cart"
        android:layout_marginBottom="-69dp"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="284dp"
        tools:layout_editor_absoluteY="43dp" />

    <Button
        android:id="@+id/button_delete_cart"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="132dp"
        android:layout_toEndOf="@+id/imageView"
        android:background="@null"
        android:gravity="center"
        android:text="@string/delete"
        android:textColor="@color/colorPrimary"
        tools:layout_editor_absoluteX="284dp"
        tools:layout_editor_absoluteY="143dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="268dp"
        android:layout_height="240dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/photo"
        app:srcCompat="@drawable/common_google_signin_btn_icon_light_normal_background"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="90dp"
        android:layout_height="33dp"
        android:layout_above="@+id/product"
        android:layout_alignStart="@+id/product"
        android:text="@string/product"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="243dp" />

    <TextView
        android:id="@+id/product"
        android:layout_width="344dp"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="171dp"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="276dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="63dp"
        android:layout_height="33dp"
        android:layout_above="@+id/price"
        android:layout_alignStart="@+id/price"
        android:text="@string/price"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="318dp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="344dp"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="92dp"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="351dp" />

    <TextView
        android:id="@+id/product_descriptionTV"
        android:layout_width="93dp"
        android:layout_height="33dp"
        android:layout_above="@+id/product_description"
        android:layout_alignStart="@+id/product_description"
        android:text="@string/details"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="396dp" />

    <TextView
        android:id="@+id/product_description"
        android:layout_width="344dp"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="429dp" />


</RelativeLayout>


